@page
@model ChatRoomTest.Pages.ChatRoomModel
@{
    ViewData["Title"] = "User Dashboard";
    
}
@section Scripts {
   
    <script src="https://unpkg.com/@@aspnet/signalr@@1.0.2/dist/browser/signalr.js" integrity="sha384-gjN8HGdgW45EWYHOqrWrZ8XHLv1zKBralQ9UU94n//6MvoCdsF3NJrBt9FssrFK3" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js" integrity="sha256-CutOzxCRucUsn6C6TcEYsauvvYilEniTXldPa6/wu0k=" crossorigin="anonymous"></script>
    <script src="~/js/agent.js"></script>
}
@section Styles
{
    <link rel="stylesheet" href="~/css/agent.css" />
}
<link rel="stylesheet" href="~/css/agent.css" />

<div class="jumbotron">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p class="lead">This is a dashboard to chat with another</p>
    <form id="userDefine" method="post">
        <input type="text" placeholder="Enter your name to start chat..."/>
        <button type="submit">Enter</button>
    </form>
</div>

<div id="toBlur" class="container">
    <div id="enterNameInfo" class="blured">
        <strong>
            Please first your name
        </strong>
    </div>
    <div id="chatPanel" class="row">
        <div class="col-md-4">
            <div id="roomList" class="list-group">
            </div>
        </div>
        <div id="ChatContentPanel" class="col-md-8">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <ul id="chatHistory" class="card-body"></ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <form id="chatForm" class="form-inline mt-2">
                        <input id="messageTextbox" type="text" placeholder="Type a message" class="form-control mr-sm-2 flex-grow-1"/>
                        <button type="submit" class="btn btn-primary">Send</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>